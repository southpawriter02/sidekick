        <!--
        Error Explain Service (v0.3.5).
        Explains error messages.
        -->
        <projectService 
            serviceImplementation="com.sidekick.generation.errorexplain.ErrorExplainService"/>
        
        <!--
        DTO Gen Service (v0.3.5).
