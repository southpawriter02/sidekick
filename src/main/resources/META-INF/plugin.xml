        <projectService 
            serviceImplementation="com.sidekick.visual.tabs.DepthTabService"/>
        
        <!--
        Depth Tab Color Provider (v0.5.1).
        Provides depth-based tab coloring.
        -->
        <editorTabColorProvider 
            implementation="com.sidekick.visual.tabs.DepthTabColorProvider"/>
        
        <!--
        Rainbow Scope Service (v0.5.2).
        Detects and manages scope-based highlighting.
        -->
        <projectService 
            serviceImplementation="com.sidekick.visual.scopes.RainbowScopeService"/>
        
        <!--
        Method Separator Service (v0.5.3).
